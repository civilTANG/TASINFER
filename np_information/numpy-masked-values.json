{
    "overall": {
        "api_name": "masked_values",
        "description": "Mask using floating point equality."
    },
    "parameter": {
        "x": {
            "type": "array_like",
            "description": "Array to mask. "
        },
        "value": {
            "type": "float",
            "description": "Masking value. "
        },
        "rtol, atol": {
            "type": "float, optional",
            "description": "Tolerance parameters passed on to isclose "
        },
        "copy": {
            "type": "bool, optional",
            "description": "Whether to return a copy of x. "
        },
        "shrink": {
            "type": "bool, optional",
            "description": "Whether to collapse a mask full of False to nomask. "
        }
    },
    "return": {
        "result": {
            "type": "MaskedArray",
            "description": "The result of masking x where approximately equal to value. "
        }
    }
}